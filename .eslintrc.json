{
  "extends": ["eslint", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6":true
  },
  "plugins": [ "react" ],
  "parserOptions": { "ecmaFeatures": { "jsx": true } },
  "rules": {
    "quotes": ["error", "single"],
    "react/jsx-uses-vars": 1 ,
    "indent": ["error", 2],
    "class-methods-use-this": 0,
    "require-jsdoc": ["error", { "require": { "FunctionDeclaration": false } }]
  }
}
